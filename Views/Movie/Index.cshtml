@model IEnumerable<StudentExercisMVC_Markus6.Models.Movie>
@{
    ViewData["Title"] = "Movies";
}

<h2>@ViewData["Title"]</h2>
<p>This is the index page of the Movie Controller.</p>

@if (Model != null && Model.Any())
{
    <div class="row">
    @foreach (var movie in Model)
    {
        <div class="col-md-3 mb-4">
            <div class="card h-100">
                @if (!string.IsNullOrEmpty(movie.ImageUrl))
                {
                    <img src="@movie.ImageUrl" class="card-img-top" alt="@movie.Title" style="width: 100%; height: 400px; object-fit: cover; object-position: top center;" />
                }
                else
                {
                    <div class="card-img-top" style="height: 300px; background-color: #ccc; display: flex; align-items: center; justify-content: center;">
                        <span>No Image</span>
                    </div>
                }
                <div class="card-body">
                    <h5 class="card-title">@movie.Title</h5>
                    <p class="card-text">
                        <strong>Director:</strong> @movie.Director<br />
                        <strong>Year:</strong> @movie.Year
                    </p>
                </div>
            </div>
        </div>
    }
    </div>
}
else
{
    <p>No movies found. Debug: Model is @(Model == null ? "null" : "empty")</p>
}

<p><a asp-action="Create">Create new movie</a></p>